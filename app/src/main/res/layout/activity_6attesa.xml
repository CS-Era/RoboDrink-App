<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <!-- Barra laterale -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/tvSidebarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stato attuale"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@android:color/white"/>

        <ListView
            android:id="@+id/lvStates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewWelcome"
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:contentDescription="Logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pic6attesa" />

        <TextView
            android:id="@+id/textViewWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Benvenuto nella Sala d'Attesa!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTimeElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Il tuo drink Ã¨ quasi pronto"
        android:textColor="#757575"
        android:textSize="18sp" />

</RelativeLayout>
</LinearLayout>
